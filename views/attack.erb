<% if @game.current_player == @game.player1 %>
<%= @game.player1.name %> attacked <%= @game.player2.name %> with <%= @attack_move %>
<% else %>
<%= @game.player2.name %> attacked <%= @game.player1.name %> with <%= @attack_move %>
<% end %>

<form action="/change_player" method="post">
  <input type="submit" value="Ok">
</form>
